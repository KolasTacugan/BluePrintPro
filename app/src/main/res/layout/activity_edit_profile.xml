<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D3C80">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- White full-width card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Edit Profile"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- First Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_semibold" />

                    <EditText
                        android:id="@+id/edittext_edit_fName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter first name"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- Middle Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Middle Name"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold" />

                    <EditText
                        android:id="@+id/edittext_edit_mName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter middle name"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- Last Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold" />

                    <EditText
                        android:id="@+id/edittext_edit_lName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter last name"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- Gender -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold" />

                    <EditText
                        android:id="@+id/edittext_edit_gender"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter gender"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- Phone Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold" />

                    <EditText
                        android:id="@+id/edittext_edit_phoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter phone number"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold" />

                    <EditText
                        android:id="@+id/edittext_edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Enter email"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:fontFamily="@font/poppins_semibold" />

                    <!-- Change Password Button -->
                    <Button
                        android:id="@+id/btn_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="#0D3C80"
                        android:text="Change Password"
                        android:background="@drawable/button_linkedin"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <!-- Save Button (smaller) -->
                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#E3E9F7"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp"
                        android:text="Save"
                        android:textColor="#000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Profile Image Floating at top center -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                android:background="@drawable/circle_background1"
                android:padding="4dp"
                android:elevation="12dp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>
