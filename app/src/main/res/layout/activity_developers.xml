<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".DevelopersActivity">



    <!-- Title -->
    <TextView
        android:id="@+id/title_developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPERS PAGE"
        android:textColor="#FFF5E1"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:elevation="6dp"/>

    <!-- Developers Container -->
    <LinearLayout
        android:id="@+id/developers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_developers"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Developer Box 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_shadow_box">

            <ImageView
                android:id="@+id/dev1_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFF5E1"
                android:src="@drawable/nic"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:cornerRadius="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dev1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Francheska Tacugan"
                    android:textColor="#FFF5E1"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dev1_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Backend Developer"
                    android:textColor="#FFF5E1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/dev1_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: ftacugan@gmail.com"
                    android:textColor="#FFF5E1"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Duplicate for Developer 2 and 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:background="@drawable/rounded_shadow_box">

            <ImageView
                android:id="@+id/dev2_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFF5E1"
                android:src="@drawable/sam"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:cornerRadius="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dev2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samantha Rubica"
                    android:textColor="#FFF5E1"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dev2_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: UI/UX Designer"
                    android:textColor="#FFF5E1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/dev2_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: srubica@gmail.com"
                    android:textColor="#FFF5E1"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:elevation="8dp"
            android:background="@drawable/rounded_shadow_box">

            <ImageView
                android:id="@+id/dev3_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFF5E1"
                android:src="@drawable/gen"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp"
                android:cornerRadius="50dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dev3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gene Cinto"
                    android:textColor="#FFF5E1"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dev3_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Mobile Developer"
                    android:textColor="#FFF5E1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/dev3_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: gcinto@gmail.com"
                    android:textColor="#FFF5E1"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/button_back_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#6A1E55"
        android:textColor="#FFF5E1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/developers_container"
        android:elevation="10dp"/>

</RelativeLayout>
