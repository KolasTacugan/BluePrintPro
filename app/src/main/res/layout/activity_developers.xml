<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DevelopersActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"> <!-- Aligns items vertically -->

        <ImageView
            android:id="@+id/button_back_dev"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_gravity="center"/> <!-- Centers the image within the LinearLayout -->

        <TextView
            android:id="@+id/title_developers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:elevation="6dp"
            android:text="DEVELOPERS"
            android:textColor="#000000"
            android:textSize="28sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/developers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_developers"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Developer: NICOLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_shadow_box">

                <TextView
                    android:id="@+id/dev_pos1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back-End Developer"
                    android:textColor="#21272B"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"
                    android:letterSpacing="0.05"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev1_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF5E1"
                        android:src="@drawable/nic"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        android:cornerRadius="50dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/dev1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Francheska Tacugan"
                            android:textColor="#21272B"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.08"/>

                        <TextView
                            android:id="@+id/dev1_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ftacugan@gmail.com"
                            android:textColor="#21272B"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_marginLeft="219dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="View Linkedin"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/button_linkedin"/>
            </LinearLayout>

            <!-- Developer: Sam -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_shadow_box">

                <TextView
                    android:id="@+id/dev_pos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UI/UX Designer"
                    android:textColor="#21272B"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"
                    android:letterSpacing="0.05"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev2_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF5E1"
                        android:src="@drawable/sam"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        android:cornerRadius="50dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/dev2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Samantha Rubica"
                            android:textColor="#21272B"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.08"/>

                        <TextView
                            android:id="@+id/dev2_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="srubica@gmail.com"
                            android:textColor="#21272B"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_marginLeft="219dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="View Linkedin"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/button_linkedin"/>
            </LinearLayout>

            <!-- Developer: Gene -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_shadow_box">

                <TextView
                    android:id="@+id/dev_pos3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front-End Developer"
                    android:textColor="#21272B"
                    android:textSize="16sp"
                    android:layout_marginBottom="25dp"
                    android:letterSpacing="0.05"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dev3_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#FFF5E1"
                        android:src="@drawable/gen"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        android:cornerRadius="50dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/dev3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gene Cinto"
                            android:textColor="#21272B"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.08"/>

                        <TextView
                            android:id="@+id/dev3_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gcinto@gmail.com"
                            android:textColor="#21272B"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:layout_marginLeft="219dp"
                    android:layout_marginTop="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="View Linkedin"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/button_linkedin"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>
