<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/gradient_bg"
    android:elevation="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have matched with"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this Architect!"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="60dp" />

    <!-- Circular Image -->
    <ImageView
        android:id="@+id/matchImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/archi1"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_background" />

    <!-- Name -->
    <TextView
        android:id="@+id/matchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monique Hir"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="4dp" />

    <!-- Profession -->
    <TextView
        android:id="@+id/matchProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residential Architecture"
        android:textColor="#555555"
        android:textSize="14sp"
        android:layout_marginBottom="60dp" />

    <!-- CTA Text -->
    <TextView
        android:id="@+id/ctaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start working together â†’"
        android:textColor="#444444"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_marginBottom="15dp" />

    <!-- Message Button -->
    <Button
        android:id="@+id/messageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textColor="#003366"
        android:background="@drawable/button_rounded"
        android:padding="12dp" />
</LinearLayout>
