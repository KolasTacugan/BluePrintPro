<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stronger outer shadow (multiple layers for depth) -->
    <item android:left="6dp" android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- Faint shadow layer -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <item android:left="3dp" android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Mid shadow layer -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main card background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#c2d9fc" /> <!-- Light blue -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
